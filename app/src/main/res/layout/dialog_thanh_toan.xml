<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/background_dialog"
    android:layout_margin="25dp"
    android:orientation="vertical">
     <ImageView
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_gravity="center_horizontal"
    android:layout_margin="15dp"
    android:src="@drawable/check"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đặt hàng thành công !"
        android:textSize="28sp"
        android:textStyle="bold"
        android:gravity="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cảm ơn bạn đã cho chúng tôi cơ hội phục vụ!"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:padding="8dp">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dialog_thanhcong"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/xanh"
        android:background="@drawable/background_btn_dangnhap"
        android:layout_gravity="center"
        android:text="OK"
        android:textSize="20sp"
        android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>