<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="-100dp"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:backgroundTint="#00ABFD"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">
                <ImageView
                    android:layout_marginTop="30dp"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:background="@drawable/logo_app"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="50dp"
                android:textStyle="bold"
                android:textSize="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tech Store"
                android:textColor="@color/white"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="170dp"
            android:background="#3782BD" />

        <LinearLayout
            android:layout_marginTop="190dp"
            android:background="#00ABFD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:id="@+id/btn_doitt"
                android:layout_marginLeft="50dp"
                android:backgroundTint="#00ABFD"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đổi Thông Tin Người dùng"/>
            <Button
                android:id="@+id/btn_dmk"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#00ABFD"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đổi Mật Khẩu"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="190dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/anhuser"
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/icon_person"/>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="250dp"
                android:layout_height="70dp"
                android:orientation="vertical">
                <TextView
                    android:text="Nguyễn Văn A"
                    android:id="@+id/tenuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/gmailuser"
                    android:text="a@gmail.com"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/phanthem"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_baseline_arrow_back_ios_24"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="290dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/sldamua"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="20"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textdamua"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="don hang da mua"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/slgiohang"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="20"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/textgiohang"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:text="san pham trong gio hang"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_marginTop="300dp"
        android:backgroundTint="#00ABFD"
        android:layout_width="300dp"
        android:layout_height="70dp"
        app:cardCornerRadius="20dp">
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp">
            <Button
                android:layout_marginTop="-5dp"
                android:id="@+id/btn_dx"
                android:textSize="20dp"
                android:backgroundTint="@color/white"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Đăng Xuất"
                android:textColor="#00ABFD"/>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>


</LinearLayout>